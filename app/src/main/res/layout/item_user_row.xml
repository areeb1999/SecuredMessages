<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_item"
    android:layout_marginTop="10.00dp"
    android:layout_marginLeft="10.00dp"
    android:layout_marginRight="10.00dp"
    android:layout_marginBottom="-8dp"

    >

    <LinearLayout
        android:id="@+id/items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/User_image"
            android:layout_width="70.00dp"
            android:layout_height="70.00dp"
            android:layout_gravity="center"
            android:layout_margin="10.00dp"
            android:src="@drawable/img"
            app:civ_border_color="#7E0851BF"
            app:civ_border_width="2.00dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FullName"
                android:textColor="@color/black"
                android:textSize="15.00dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/user_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textColor="@color/black"
                android:textStyle="normal" />


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>