<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ProfileImage"
        android:layout_width="40.00dp"
        android:layout_height="40.00dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10.00dp"
        android:layout_marginTop="10.00dp"
        android:layout_marginEnd="10.00dp"
        android:layout_marginBottom="10.00dp"
        android:src="@drawable/img"
        app:civ_border_color="#8D0851BF"
        app:civ_border_width="2.00dp" />

    <TextView
        android:id="@+id/SenderMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5.00dp"
        android:layout_marginTop="5.00dp"
        android:layout_marginEnd="5.00dp"
        android:layout_marginBottom="5.00dp"
        android:layout_toLeftOf="@+id/ProfileImage"
        android:background="@drawable/sender_shape"
        android:padding="10sp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="15sp" />

</RelativeLayout>