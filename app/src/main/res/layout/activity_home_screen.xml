<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E992EBFA"
    android:layout_height="match_parent"
    tools:context=".HomeScreen">


  <LinearLayout
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="50.00dp"
      android:background="#096BFF"
      android:gravity="right">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10.00dp"
        android:layout_weight="1"
        android:text="Secure Message"
        android:textColor="@color/white"
        android:textSize="18.00dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/settings"
        android:layout_width="35.00dp"
        android:layout_height="35.00dp"
        android:layout_gravity="center"
        android:layout_marginRight="5.00dp"
        android:src="@drawable/settings_icon" />

    <ImageView
        android:id="@+id/img_logout"
        android:layout_width="35.00dp"
        android:layout_height="35.00dp"
        android:layout_gravity="center"
        android:layout_marginRight="10.00dp"
        android:background="@drawable/ic_baseline_login_24" />


  </LinearLayout>

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/MainUserRecyclerView"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_below="@+id/toolbar"
      android:layout_marginTop="3.00dp"
      android:layout_marginBottom="5dp" />

  <View
      android:layout_below="@+id/MainUserRecyclerView"
      android:layout_width="match_parent"
      android:layout_height="5dp"/>


</RelativeLayout>