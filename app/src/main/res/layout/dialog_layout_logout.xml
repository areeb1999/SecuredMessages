<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15.00dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/shape_dailog">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="10.00dp"
            android:layout_marginBottom="10.00dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="Are you sure want to Log Out?"
            android:textColor="@color/black"
            android:textSize="18.00dp" />

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/TxtNoBtn"
            android:layout_width="0dp"
            android:layout_height="35.00dp"
            android:layout_weight="1"
            android:text="No"
            android:background="@drawable/logout_dialog_btn"
            android:backgroundTint="#7A7777"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:layout_marginRight="5dp"
            android:gravity="center"/>

        <TextView
            android:id="@+id/TxtYesBtn"
            android:layout_width="0dp"
            android:layout_height="35.00dp"
            android:layout_weight="1"
            android:background="@drawable/logout_dialog_btn"
            android:backgroundTint="#0851BF"
            android:text="Yes"
            android:layout_marginLeft="5dp"
            android:layout_gravity="bottom"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:gravity="center"/>


    </LinearLayout>


</LinearLayout>